@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Index";
}

<h1>All Users </h1>
<br />
<br />

<form class="my-3" asp-action="Index" asp-controller = "Users"> 
    <div class="row">
        <div class="col-sm-8">
            <input placeholder="Search by Name" name="SearchValue" class="form-control" />
        </div>
        <div class="col-sm-4">
            <input type="submit" value="Search" class="btn btn-success btn-block" />
        </div>
    </div>

</form>

@if (Model.Count()>0)
{
    <table>
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D => D.UserName)</th>
                <th>@Html.DisplayNameFor(D => D.Id)</th>
                <th>@Html.DisplayNameFor(D => D.Email)</th>
                <th>@Html.DisplayNameFor(D => D.PhoneNumber)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var User in Model)
            {
                <tr>

                    <td>@Html.DisplayFor(S => @User.Id)</td>
                    <td>@Html.DisplayFor(S => @User.UserName)</td>
                    <td>@Html.DisplayFor(S => @User.Email)</td>
                    <td>@Html.DisplayFor(S => @User.PhoneNumber)</td>
                    <partial name="_ButtonsPartialVeiw" model="@User.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="  mt-3 alert alert-warning">
        <h4> There is No Users!</h4>
    </div>
}










